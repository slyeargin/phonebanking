%h1= @campaign.name

%h2 #{@target.first_name} #{@target.last_name}
%p.location #{@target.zipcode}

%p.phone-number= number_to_phone(@target.phone_number, area_code: true)

= simple_form_for [@campaign, @target] do | target_form |
  = target_form.label :has_been_called, 'Did you speak to a person or leave a voicemail?'
  = target_form.collection_radio_buttons :has_been_called, [[true, 'Yes'] ,[false, 'No']], :first, :last

  = target_form.simple_fields_for :responses, @response do | target_response_form |
    = target_response_form.input :question, :as => :hidden, :input_html => { :value => "Was the target aware?" }
    = target_response_form.input :contacted_when, :as => :hidden, :input_html => { :value => Time.now }
    = target_response_form.input :campaign_id, :as => :hidden, :input_html => { :value => @campaign.id }
    = target_response_form.label :answer, 'Was #{@target.first_name} aware of #{@campaign.name}?'
    = target_response_form.collection_radio_buttons :answer, [[true, 'Yes'] ,[false, 'No']], :first, :last
  = target_form.submit 'Save Response'



%hr
